        "api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "description": "User Login",
                "operationId": "18027c6b05c566dd747efa20f51af21b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "example": "{\"email\":\"adrian.runolfsdottir51@yahoo.com\", \"password\":\"1*Kg=4J3p\"}"
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login",
                        "content": {
                            "application/json": {
                                "example": "{\"status\": \"success\",\"data\": {\"token_type\": \"Bearer\",\"token\": \"3|mpZXpfKUgHDaIG4rx5brFj0Msh70Ri9fPvR3tOaed744e596\",\"expiration\": 525600}}"
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "api/auth/register": {

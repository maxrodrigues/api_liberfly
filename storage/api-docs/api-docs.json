                "operationId": "246d38bd6c501b12476de086ac23f7f9",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "example": "{\"name\":\"Benny Keebler\",\"email\":\"adrian.runolfsdottir51@yahoo.com\", \"password\":\"1*Kg=4J3p\", \"password_confirmation\":\"1*Kg=4J3p\"}"
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful register user"
                    },
                    "422": {
                        "description": "Error when validating data"
                    },
                    "400": {
                        "description": "Generic or unmapped error"
                    }
                }
            }
        },
